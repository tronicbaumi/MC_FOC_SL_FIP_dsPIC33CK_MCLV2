    <refnamediv xml:id="x2c_Clarke_MCHP">
        <refname>x2c_Clarke_MCHP</refname>
        <refpurpose>MCHP Clark Transform</refpurpose>
    </refnamediv>

    <refsection>
        <para>
            <inlinemediaobject>
                <imageobject>
                <imagedata fileref="../../Icons/Clarke_MCHP.png" align="center" valign="middle"/>
                </imageobject>
            </inlinemediaobject>
        </para>
    </refsection>

    <refsection>
        <title>Description</title>
        <para>Moves a three-axis, two-dimensional
coordinate system, referenced to the stator, onto a
two-axis system, keeping the same reference.</para>
    </refsection>

    <refsection>
        <title>Inports</title>
        <simplelist type="vert">
            <member><emphasis role="bold">a:</emphasis> A phase</member>
            <member><emphasis role="bold">b:</emphasis> B phase</member>
        </simplelist>
    </refsection>

    <refsection>
        <title>Outports</title>
        <simplelist type="vert">
            <member><emphasis role="bold">alpha:</emphasis> Shifted A phase</member>
            <member><emphasis role="bold">beta:</emphasis> Shifted B phase</member>
        </simplelist>
    </refsection>

    <refsection>
        <title>Mask Parameters</title>
        <para>None</para>
    </refsection>

    <refsection>
        <title>Implementations</title>

        <simplelist type="vert">
            <member><emphasis role="bold">FiP16:</emphasis> 16 Bit Fixed Point</member>
            <member><emphasis role="bold">FiP32:</emphasis> 32 Bit Fixed Point</member>
            <member><emphasis role="bold">Float32:</emphasis> 32 Bit Floating Point</member>
        </simplelist>
    </refsection>

</refentry>
